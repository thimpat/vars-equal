{
  "compilerOptions": {
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "types": ["node"],
    "typeRoots": ["./node_modules/@types"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "module": "ES2015",
    "target": "esnext",
    "lib": ["esnext"]
  },
  "include": ["esm/**/*", "test/**/*.specs.ts"],
  "exclude": ["node_modules/"]
}